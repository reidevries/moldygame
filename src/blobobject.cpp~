#include "blobobject.h"

BlobObject::BlobObject(VectorFan vectorfan, TextureSprite* spritearray, int spritenum, Vector2 position, float speed):GameObject(spritearray, spritenum, position) {
	this->vectorfan = vectorfan;
	this->speed = speed;
}

BlobObject::BlobObject(VectorFan vectorfan, float speed):GameObject(nullptr, 0, (Vector2){0,0}) {
	this->vectorfan = vectorfan;
	this->speed = speed;
}

void BlobObject::update(VectorFan fillable, float dt) {
	
}

void BlobObject::draw() {
	DrawTriangleFan(vectorfan.getArray(), vectorfan.getPointNum(), colour);
	for (int i = 0; i < spritenum; i++) {
		spritearray[i].draw(position);
	}
}
